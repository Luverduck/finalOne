<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace = "ahzitBoard">

	<!-- 등록을 위한 다음 게시글 번호 반환 -->
	<select id = "nextBoardNo" resultType = "int">
		select ahzit_board_seq.nextval from dual
	</select>
	
	<!-- 게시글 등록 -->
	<insert id = "insert" parameterType = "String">
		insert into ahzit_board(board_no, board_writer, board_content) values (#{boardNo}, #{boardWriter}, #{boardContent})
	</insert>
	
</mapper>